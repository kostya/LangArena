FROM benchmarks:base

ARG version

RUN wget https://static.rust-lang.org/rustup/dist/x86_64-unknown-linux-gnu/rustup-init \
    && chmod +x rustup-init \
    && ./rustup-init -y \
        --default-toolchain ${version} \
        --profile minimal \
    && rm rustup-init

ENV PATH="/root/.cargo/bin:$PATH"
