FROM ubuntu:24.04

WORKDIR /opt
ENV DEBIAN_FRONTEND=noninteractive
ENV TZ=Etc/UTC

RUN apt update && apt install -y --no-install-recommends \
    software-properties-common \
    wget \
    curl \
    git \
    gnupg \
    libgmp-dev \
    build-essential \
    iputils-ping \
    ca-certificates \
    time \
    tzdata \
    pkg-config \
    unzip \
    libnuma-dev \
    numactl \
    zlib1g-dev \
    libxml2-dev \
    libssl-dev \
    libpcre2-dev \ 
    cmake \
    vim \
    mc \
    && apt clean
